{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext",
			"es2015",
            "es2016"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react",
		"outDir": "./dist/",
        "sourceMap": true,
		"noImplicitAny": true,
		"experimentalDecorators": true,
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./node_modules"
	]
}